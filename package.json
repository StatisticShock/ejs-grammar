{
	"name": "ejs-language-support-with-delimiters",
	"displayName": "EJS language support with delimiters",
	"description": "EJS language support >>with delimiters<< for Visual Studio Code.",
	"version": "1.3.2",
	"license": "MIT",
	"icon": "assets/icon.png",
	"publisher": "StatisticShock",
	"author": {
		"name": "Derek Thomas"
	},
	"main": "./src/ejs.js",
	"engines": {
		"vscode": "^1.105.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"EJS",
		"embedded javascript",
		"syntax highlighting"
	],
	"contributes": {
		"languages": [
			{
				"id": "ejs",
				"aliases": [
					"EJS",
					"ejs"
				],
				"extensions": [
					".ejs"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"scopeName": "text.html.ejs",
				"path": "./syntaxes/ejs.tmLanguage.json",
				"injectTo": [
					"text.html"
				],
				"embeddedLanguages": {
					"meta.embedded.block.ejs": "ejs",
					"meta.embedded.block.javascript": "source.js"
				}
			}
		],
		"snippets": [
			{
				"language": "html",
				"path": "./snippets/snippets.json"
			}
		],
		"configurationDefaults": {
			"files.associations": {
				"*.ejs": "html"
			},
			"emmet.includeLanguages": {
				"ejs": "html"
			}
		},
		"configuration": [
			{
				"title": "Delimiter",
				"order": 0,
				"properties": {
					"ejs-language-support-with-delimiters.delimiter": {
						"type": "string",
						"default": "%",
						"description": "The delimiter that will be used by the text highlighter."
					}
				}
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/StatisticShock/ejs-grammar.git"
	},
	"devDependencies": {
		"@types/node": "^24.10.0",
		"@types/vscode": "^1.105.0"
	}
}
